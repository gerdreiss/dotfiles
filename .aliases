# navigate
alias lib='cd ~/Library'

# update
alias sdkup='sdk update && sdk upgrade'
alias uprust='rustup update'
alias gitup='gitallup -r -p ~/Workspace -a ~/.gitallup/actions.properties'
alias upall='bubu && sdkup && uprust && gitup'

