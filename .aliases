# python
alias py=python
alias py3=python3

# exa based aliases
alias l='exa --long --inode --group-directories-first'
alias ll='exa --all --long --inode --group-directories-first'
alias lll='exa --all --long --inode --group-directories-first'
alias la='exa -Ga --group-directories-first'

# mac
alias resetdock='defaults write com.apple.dock ResetLaunchPad -bool true; killall Dock'
alias rmdsstore='find ~/ -name ".DS_Store" -depth -exec rm {} \;'
alias rmalldsstore='sudo find / -name ".DS_Store" -depth -exec rm {} \;'

